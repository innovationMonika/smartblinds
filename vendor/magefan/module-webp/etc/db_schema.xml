<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magefan_webp_images">
        <column xsi:type="int" name="image_id" identity="true" unsigned="true" nullable="false" padding="10" comment="Image ID"/>
        <column xsi:type="varchar" name="image" nullable="false" default="" comment="Image"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="image_id"/>
        </constraint>
    </table>
</schema>
