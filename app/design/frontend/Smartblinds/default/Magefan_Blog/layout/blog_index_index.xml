<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="blog_default"/>
    <update handle="blog_post_list"/>
    <body>
        <referenceContainer name="content">
            <container name="blog.category.description.container" htmlTag="div" htmlClass="category-content" before="blog.list.navigation">
                <block class="Magento\Cms\Block\Block" name="blog.main.category.description" >
                    <arguments>
                        <argument name="block_id" xsi:type="string">blog-main-category-description</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
