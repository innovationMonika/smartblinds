<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="category_swatch" type="swatch_image">
                <width>270</width>
                <height>320</height>
            </image>
            <image id="fabric_swatch" type="fabric_swatch">
                <width>270</width>
                <height>320</height>
            </image>
            <image id="category_page_grid" type="small_image">
                <width>270</width>
                <height>320</height>
            </image>
            <image id="category_page_list" type="small_image">
                <width>270</width>
                <height>320</height>
            </image>

            <image id="product_page_image_medium" type="image">
                <width>600</width>
                <height>710</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>126</width>
                <height>149</height>
            </image>
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>315</width>
                <height>410</height>
            </image>
            <image id="upsell_products_list" type="small_image">
                <width>270</width>
                <height>320</height>
            </image>
            <image id="related_products_list" type="small_image">
                <width>270</width>
                <height>320</height>
            </image>
        </images>
    </media>

    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="allowfullscreen">ture</var> <!-- Turn on/off fullscreen (true/false) -->
            <var name="navdir">vertical</var> <!-- Sliding direction of thumbnails (horizontal/vertical) -->
            <var name="navtype">thumbs</var> <!-- Sliding type of thumbnails (slides/thumbs) -->
            <var name="thumbmargin">30</var>
        </var>

        <var name="magnifier">
            <var name="fullscreenzoom">20</var>  <!-- Zoom for fullscreen (integer)-->
            <var name="top"></var> <!-- Top position of magnifier -->
            <var name="left"></var> <!-- Left position of magnifier -->
            <var name="width"></var> <!-- Width of magnifier block -->
            <var name="height"></var> <!-- Height of magnifier block -->
            <var name="eventType">click</var> <!-- Action that atcivates zoom (hover/click) -->
            <var name="enabled">true</var> <!-- Turn on/off magnifier (true/false) -->
            <var name="mode">inside</var> <!-- Zoom type (outside/inside) -->
        </var>
    </vars>

    <vars module="Magento_ConfigurableProduct">
        <var name="gallery_max_thumbs_height">620</var>
    </vars>
</view>
