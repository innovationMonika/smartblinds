<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="top.container">
            <block class="Magento\Cms\Block\Block" name="home-hero">
                <arguments>
                    <argument name="block_id" xsi:type="string">home-hero</argument>
                </arguments>
            </block>
        </referenceContainer>

        <move element="top-notification-bar" destination="page.wrapper" after="header.container" />
    </body>
</page>
