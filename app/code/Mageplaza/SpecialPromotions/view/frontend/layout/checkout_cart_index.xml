<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_SpecialPromotions::css/style.css"/>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
    </head>
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="discount" xsi:type="array">
                                    <item name="component" xsi:type="string">Mageplaza_SpecialPromotions/js/view/cart/totals/discount</item>
                                </item>
                                <item name="before_grandtotal" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="discount" xsi:type="array">
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="mp_coupon_popup" xsi:type="array">
                                    <item name="component" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::getCouponPopupComponent"/>
                                    <item name="sortOrder" xsi:type="string">300</item>
                                    <item name="config" xsi:type="array">
                                        <item name="componentDisabled" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::isDisabledCouponPopup"/>
                                    </item>
                                    <item name="children" xsi:type="array">
                                        <item name="errors" xsi:type="array">
                                            <item name="sortOrder" xsi:type="string">0</item>
                                            <item name="component" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::getCouponMessageComponent"/>
                                            <item name="displayArea" xsi:type="string">messages</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="additional.product.info">
            <block class="Mageplaza\SpecialPromotions\Block\Cart\Debug" name="additional.product.info.debug" template="Mageplaza_SpecialPromotions::debug/items.phtml" ifconfig="specialpromotions/develop/enabled" cacheable="false"/>
        </referenceBlock>
        <!--        <referenceContainer name="page.messages">-->
        <!--            <block class="Magento\Framework\View\Element\Messages" name="discount.debug.messages" template="Mageplaza_SpecialPromotions::debug/cart.phtml" ifconfig="specialpromotions/develop/enabled"/>-->
        <!--        </referenceContainer>-->
    </body>
</page>
