<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_SpecialPromotions::css/style.css"/>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="discount" xsi:type="array">
                                                            <item name="component" xsi:type="string">Mageplaza_SpecialPromotions/js/view/summary/discount</item>
                                                        </item>
                                                    </item>
                                                </item>
                                                <item name="mp_coupon_popup" xsi:type="array">
                                                    <item name="component" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::getCouponPopupComponent"/>
                                                    <item name="sortOrder" xsi:type="string">0</item>
                                                    <item name="config" xsi:type="array">
                                                        <item name="componentDisabled" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::isDisabledCouponPopup"/>
                                                    </item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="errors" xsi:type="array">
                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                            <item name="component" xsi:type="helper" helper="Mageplaza\SpecialPromotions\Helper\Data::getCouponMessageComponent"/>
                                                            <item name="displayArea" xsi:type="string">messages</item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
