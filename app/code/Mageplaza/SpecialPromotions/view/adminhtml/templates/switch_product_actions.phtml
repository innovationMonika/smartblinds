<script type="text/javascript">
    require(['jquery'], function ($) {
        $(document).ready(function () {
            var simpleAction = $('[name="simple_action"]');

            switchProductActions(simpleAction.val());
            simpleAction.change(function () {
                switchProductActions(this.value)
            });
        });

        function switchProductActions (value) {
            var productXActions = $('[data-index="product_x_actions"]'),
                productYActions = $('[data-index="product_y_actions"]'),
                itemActionQty   = $('[data-index="item_action_qty"]');

            if (value === 'buy_x_item_get_y_item') {
                productXActions.show();
                productYActions.show();
                itemActionQty.hide();
            } else {
                productXActions.hide();
                productYActions.hide();
                if($('[data-index="item_action"] option:selected').val() !== 'none') {
                    itemActionQty.show();
                }
            }
        }
    });
</script>
