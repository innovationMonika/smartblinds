<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <section id="carriers">
        <group id="channable" translate="label" type="text" sortOrder="999" showInDefault="1">
            <label>Channable</label>
            <field id="heading_title" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Title</label>
                <frontend_model>Magmodules\Channable\Block\Adminhtml\Design\Heading</frontend_model>
            </field>
            <field id="title" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Title</label>
            </field>
            <field id="overwrite_title" translate="label" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Replace by Channel Name</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <comment>If enabled; channel name will be used as carrier title, e.g. Amazon</comment>
            </field>
            <field id="heading_name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Name</label>
                <frontend_model>Magmodules\Channable\Block\Adminhtml\Design\Heading</frontend_model>
            </field>
            <field id="name" translate="label" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Name</label>
            </field>
            <field id="overwrite_name" translate="label" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Replace by Selected Shipping Method</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <comment>If enabled; selected shipping method from platform will be used for name, e.g. Prime</comment>
            </field>
        </group>
    </section>
</include>
