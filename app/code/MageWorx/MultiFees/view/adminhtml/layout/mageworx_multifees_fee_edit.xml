<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit" name="mageworx_multifees_fee_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Tabs" name="mageworx_multifees_fee_tabs">
                <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Tab\Main" name="mageworx_multifees_fee_edit_tab_main" as="main" />
                <container label="Options" name="main_options">
                    <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Tab\MainOptions" name="mageworx_multifees_fee_edit_tab_main_options"/>
                    <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Options\Options" as="options"/>
                </container>
                <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Tab\Conditions" name="mageworx_multifees_fee_edit_tab_conditions" as="conditions"/>
                <!--block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Tab\Actions" name="mageworx_multifees_fee_edit_tab_actions" as="actions"/-->
                <block class="MageWorx\MultiFees\Block\Adminhtml\Fee\Edit\Options\Labels" as="labels"/>
            </block>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" name="attribute_edit_js" template="MageWorx_MultiFees::tab/js.phtml"/>
        </referenceContainer>
    </body>
</page>
