<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="sales_order">
        <column xsi:type="varchar"
                default="REGULAR"
                name="order_type"
                nullable="false"
                length="255"
                comment="order_type"/>
        <column xsi:type="varchar"
                name="base_increment_id"
                nullable="true"
                length="255"
                comment="base_increment_id"/>
    </table>

    <table name="sales_order_grid">
        <column xsi:type="varchar"
                name="order_type"
                nullable="false"
                length="255"
                comment="order_type"/>
    </table>

</schema>
