<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.system.config.tabs">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Smartblinds_Config::system/config/tabs.phtml</argument>
            </action>
            <arguments>
                <argument name="tabsViewModel" xsi:type="object">Smartblinds\Config\ViewModel\Tabs</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
