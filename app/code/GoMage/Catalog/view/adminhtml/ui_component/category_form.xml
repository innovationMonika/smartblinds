<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="category_name" sortOrder="60" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Alternative Category Name</label>
            </settings>
        </field>
    </fieldset>
    <fieldset name="display_settings">
        <field name="hide_toolbar" component="Magento_Ui/js/form/element/single-checkbox" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <dataType>boolean</dataType>
                <label>Hide Toolbar</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="hide_category_color_swatch" component="Magento_Ui/js/form/element/single-checkbox" sortOrder="61" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <dataType>boolean</dataType>
                <label>Hide Category Color Swatch</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="hide_category_view_mode" component="Magento_Ui/js/form/element/single-checkbox" sortOrder="62" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <dataType>boolean</dataType>
                <label>Hide Category View Mode</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
