<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="gomage_cookiebot" translate="label" type="text" sortOrder="100"
                 showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Cookiebot</label>
            <tab>gomage</tab>
            <resource>GoMage_Cookiebot::config</resource>
            <group id="general" translate="label" type="text" sortOrder="100"
                   showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="cookie_consent" translate="label" type="text" sortOrder="100"
                   showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Cookie Consent Script</label>
                <field id="url" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>URL</label>
                </field>
                <field id="id" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>id</label>
                </field>
                <field id="cbid" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>cbid</label>
                </field>
                <field id="blocking_mode" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>blockingmode</label>
                </field>
                <field id="culture" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>culture</label>
                </field>
            </group>
            <group id="cookie_declaration" translate="label" type="text" sortOrder="100"
                   showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Cookie Declaration Script</label>
                <field id="url" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>URL</label>
                </field>
                <field id="id" translate="label" type="text" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>id</label>
                </field>
            </group>
        </section>
    </system>
</config>
